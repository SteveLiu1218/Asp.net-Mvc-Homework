@model List<MoneyMvcHw.Models.ViewModel.MoneyViewModel>
@using MoneyMvcHw.Helper;
@{
    Layout = null;
    int iTemp = 0;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @foreach (var m in Model)
            {
                iTemp++;
                <tr @Html.DisplayCategoryColor(m.Category)>
                    <td>@iTemp</td>
                    <td>@m.Category</td>
                    <td>@m.Date.ToString("yyyy-MM-dd")</td>
                    <td>@m.Total.ToString("N0")</td>
                </tr>
            }

        </table>
    </div>
</div>
